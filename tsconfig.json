{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2020",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmitOnError": false
  },
  "include": [
    "index.ts",
    "setup.ts",
    "lib/**/*.ts",
    "utils/**/*.ts",
    "stubs/**/*.ts",
    "config/**/*.ts",
    "@types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "tests",
    "__mocks__",
    "**/__mocks__/**",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.test.tsx",
    "**/*.spec.tsx",
    "demo",
    "examples"
  ]
}
