entrypoint = "index.js"
modules = ["nodejs-20"]
hidden = [".config", "package-lock.json"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-24_11"

[deployment]
run = ["node", "index.js"]
deploymentTarget = "autoscale"
ignorePorts = false

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test Runner"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Demo Server"

[[workflows.workflow]]
name = "Test Runner"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node qtests-runner.mjs"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Demo Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node demo/server/index.js"
waitForPort = 5000

[agent]
expertMode = true

[[ports]]
localPort = 5000
externalPort = 80
